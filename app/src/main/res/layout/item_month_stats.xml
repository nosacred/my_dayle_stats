<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundedImageView"
        android:id="@+id/mstats_imageVIew"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:fontFamily="sans-serif"
        android:id="@+id/mstat_arcticle_nmId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
        app:layout_constraintTop_toTopOf="@id/mstats_imageVIew" />

    <TextView
        android:fontFamily="sans-serif"
        android:id="@+id/mstat_subject_category"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
        app:layout_constraintTop_toBottomOf="@id/mstat_arcticle_nmId" />

        <TextView
            android:fontFamily="sans-serif"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/mstat_subject_category"
            app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
            android:id="@+id/mstat_bcode"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:fontFamily="sans-serif"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginStart="8dp"
            android:id="@+id/mstat_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mstat_bcode"
            app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:fontFamily="sans-serif"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginStart="8dp"
            android:id="@+id/mstat_count_order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mstat_size"
            app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:fontFamily="sans-serif"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginStart="8dp"
            android:id="@+id/mstat_count_sale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
            app:layout_constraintTop_toBottomOf="@id/mstat_count_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:fontFamily="sans-serif"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginStart="8dp"
            android:id="@+id/mstat_count_stocks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mstat_count_sale"
            app:layout_constraintStart_toEndOf="@+id/mstats_imageVIew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>