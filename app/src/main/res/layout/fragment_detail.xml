<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:context=".fragments.DetailFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        style="?attr/materialCardViewStyle"
        android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/df_imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:src="@tools:sample/avatars" />

            <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/roundedImageView"
                android:id="@+id/df_imageView2"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:id="@+id/df_imageView3"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Статистика по артикулу за 30 дней"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/df_nmid"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Артикул вб"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/df_cat_subj"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Категория Предмет"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/df_orderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Заказано штук"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/df_ordersSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="на сумму  100500р"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/df_ordersCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Отменено: 55штук"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

        <TextView
            android:id="@+id/df_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="ПРоцент отказа"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/df_saleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Выкупили штук"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/df_salesSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="на сумму"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/df_salesCancelCountSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Возвратов на 25000р"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/df_totalStockCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/df_toClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="к клиенту" />

        <TextView
            android:id="@+id/df_toWH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="на склад"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>
        <Switch
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:id="@+id/df_switch_ordersWH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percents"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/df_graph_orderWH"
            android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        </com.github.mikephil.charting.charts.PieChart>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/df_graph_stockWH"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Switch
            android:layout_gravity="end"
            android:id="@+id/df_switch_ordersRegions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percents"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <com.github.mikephil.charting.charts.PieChart
            android:layout_margin="5dp"
            android:id="@+id/df_graph_regionOrders"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.core.widget.NestedScrollView>
